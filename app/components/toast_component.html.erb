<%= tag.div data: { controller: 'toast' }, class: "#{flash_color_classes} rounded-b px-4 py-3 shadow-md" do %>
  <div class="flex">
    <div class="py-1"><svg class="fill-current h-6 w-6 text-white-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg></div>
    <div class="w-full">
      <div class="flex justify-between w-full">
        <p class="font-bold"><%= @flash_type.humanize %></p>
        <button
            class="px-3"
            data-action="click->toast#removeContent"
          >
          <i class="fa-solid fa-x"></i>
        </button>
      </div>
      <p class="text-sm"><%= @message %></p>
    </div>
  </div>
<% end %>
