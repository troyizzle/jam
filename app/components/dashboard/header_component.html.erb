<header class="sticky top-0 flex w-full drop-shadow-1 dark:drop-shadow-none bg-white dark:bg-boxdark z-999">
  <div class="flex flex-grow items-center justify-between shadow-2 py-4 px-4 md:px-6 2xl:px-11">
    <div class="lg:hidden flex items-center gap-2 sm:gap-4">
      <% if render_toggle_button? %>
        <button
            class="lg:hidden block z-99999 bg-white dark:bg-boxdark border border-stroke dark:border-strokedark p-1.5 shadow-sm rounded-sm"
            data-sidebar-target="openButton"
            data-action="click->sidebar#toggle"
            >
            <span class="block relative cursor-pointer w-5.5 h-5.5">
              <%= inline_svg_tag('icons/solid/bars.svg', class: 'fill-current') %>
            </span>
        </button>
      <% end %>
      <%= link_to root_url, { class: "block lg:hidden flex-shrink-0" } do %>
        <%= render LogoComponent.new %>
      <% end %>
    </div>
    <div class="hidden sm:block">
    </div>

    <div class="flex items-center gap-3 2xsm:gap-7">
      <button
          data-controller="theme"
          data-action="click->theme#toggle"
          class="hidden dark:block hover:bg-gray-700 py-2 px-4 rounded-lg">
          <%= inline_svg_tag("icons/solid/sun.svg", class: "h-5 w-5 fill-whiter") %>
      </button>
      <button
          data-controller="theme"
          data-action="click->theme#toggle"
          class="block dark:hidden hover:bg-gray-700 py-2 px-4 rounded-lg">
          <%= inline_svg_tag("icons/solid/moon.svg", class: "h-5 w-5 fill-graydark") %>
      </button>

      <ul class="flex items-center gap-2 2xsm:gap-4">
        <% if render_notification? %>
          <li class="relative" x-data="{ dropdownOpen: false, notifying: true }" @click.outside="dropdownOpen = false">
            <a class="relative flex items-center justify-center w-8.5 h-8.5 rounded-full border-[0.5px] border-stroke dark:border-strokedark bg-gray dark:bg-meta-4 dark:text-white hover:text-primary"
               href="#" @click.prevent="dropdownOpen = ! dropdownOpen; notifying = false">
              <span :class="!notifying && 'hidden'" class="absolute -top-0.5 right-0 w-2 h-2 rounded-full bg-meta-1 z-1">
                <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-meta-1 opacity-75 -z-1"></span>
              </span>

              <svg class="fill-current ease-in-out duration-300" width="18" height="18"
                                                                            viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                    d="M16.1999 14.9343L15.6374 14.0624C15.5249 13.8937 15.4687 13.7249 15.4687 13.528V7.67803C15.4687 6.01865 14.7655 4.47178 13.4718 3.31865C12.4312 2.39053 11.0812 1.7999 9.64678 1.6874V1.1249C9.64678 0.787402 9.36553 0.478027 8.9999 0.478027C8.6624 0.478027 8.35303 0.759277 8.35303 1.1249V1.65928C8.29678 1.65928 8.24053 1.65928 8.18428 1.6874C4.92178 2.05303 2.4749 4.66865 2.4749 7.79053V13.528C2.44678 13.8093 2.39053 13.9499 2.33428 14.0343L1.7999 14.9343C1.63115 15.2155 1.63115 15.553 1.7999 15.8343C1.96865 16.0874 2.2499 16.2562 2.55928 16.2562H8.38115V16.8749C8.38115 17.2124 8.6624 17.5218 9.02803 17.5218C9.36553 17.5218 9.6749 17.2405 9.6749 16.8749V16.2562H15.4687C15.778 16.2562 16.0593 16.0874 16.228 15.8343C16.3968 15.553 16.3968 15.2155 16.1999 14.9343ZM3.23428 14.9905L3.43115 14.653C3.5999 14.3718 3.68428 14.0343 3.74053 13.6405V7.79053C3.74053 5.31553 5.70928 3.23428 8.3249 2.95303C9.92803 2.78428 11.503 3.2624 12.6562 4.2749C13.6687 5.1749 14.2312 6.38428 14.2312 7.67803V13.528C14.2312 13.9499 14.3437 14.3437 14.5968 14.7374L14.7655 14.9905H3.23428Z"
                    fill="" />
              </svg>
            </a>
          </li>
        <% end %>
      </ul>

      <% if render_user_menu? %>
        <%= render Dashboard::UserMenuComponent.new(user: @user) %>
      <% else %>
        <%= link_to t(".sign_in"), new_user_session_path, class: "bg-primary inline-flex items-center justify-center rounded-md py-4 px-10 text-center font-medium text-white hover:bg-opacity-90 lg:px-8 xl:px-10" %>
      <% end %>
    </div>
  </div>
</header>
