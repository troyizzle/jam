<div class="col-span-5 xl:col-span-3">
  <div
      class="shadow-default rounded-sm border border-stroke dark:border-strokedark bg-white dark:bg-boxdark">
    <div class="py-4 px-7 border-b border-stroke dark:border-strokedark">
      <h3 class="font-medium text-black dark:text-white">Personal Information</h3>
    </div>
    <div class="p-7">
      <%= form_with model: @profile, id: dom_id(@profile) do |form| %>
        <%= render "shared/errors", resource: @profile%>
        <div class="flex flex-col sm:flex-row gap-5.5 mb-5.5">
          <div class="w-full sm:w-1/2">
            <%= render Form::FieldComponent.new(form, :first_name) do |field| %>
              <div class="relative">
                <%= inline_svg_tag("icons/solid/user.svg", class: "w-4 h-4 absolute left-4.5 top-4 fill-current", "aria-hidden": "true") %>
                <%= field.with_input_text extra_classes: 'pl-11.5', placeholder: 'First name...' %>
              </div>
            <% end %>
          </div>
          <div class="w-full sm:w-1/2">
            <%= render Form::FieldComponent.new(form, :last_name) do |field| %>
              <div class="relative">
                <%= inline_svg_tag("icons/solid/user.svg", class: "w-4 h-4 absolute left-4.5 top-4 fill-current", "aria-hidden": "true") %>
                <%= field.with_input_text extra_classes: 'pl-11.5', placeholder: 'Last name...' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="mb-5.5">
          <%= render Form::FieldComponent.new(form, :bio) do |field| %>
            <div class="relative">
              <span class="absolute left-4.5 top-4">
                <%= inline_svg_tag "icons/solid/pen_to_square.svg", class: "w-4 h-4 fill-current", "aria-hidden": "true" %>
              </span>

              <%= field.with_input_text_area extra_classes: 'pl-11.5', placeholder: "Enter in a bio..." %>
            </div>
          <% end %>
        </div>
        <div class="mb-5.5">
          <%= render Form::FieldComponent.new(form, :github) do |field| %>
            <div class="flex">
              <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-meta-2 bg-meta-9 sm:text-sm font-bold text-black">
                github.com/
              </span>
              <%= field.with_input_text extra_classes: 'pl-2' %>
            </div>
          <% end %>
        </div>
        <div class="mb-5.5">
          <%= render Form::FieldComponent.new(form, :twitter) do |field| %>
            <div class="flex">
              <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-meta-2 bg-meta-9 sm:text-sm font-bold text-black">
                twitter.com/
              </span>
              <%= field.with_input_text extra_classes: 'pl-2' %>
            </div>
          <% end %>
        </div>
        <div class="flex justify-end mt-4">
          <%= render Form::ButtonComponent.new(form, title: 'Save', wide: false) %>
        </div>
      <% end %>
    </div>
  </div>
</div>

