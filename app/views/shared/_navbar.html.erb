<div class="min-h-full">
  <%= tag.nav data: { controller: "toggle", toggle_visibility_class_value: "hidden", action: "toggle-nav-bar@window->toggle#toggle" }, class: "bg-white dark:bg-boxdark" do %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center">
          <!-- Mobile link -->
          <div class="block md:hidden text-gray-300 mr-1">
            <button
                data-action="click->toggle#toggle"
                class="py-2 px-3 hover:bg-gray-700">
              <span data-toggle-target="element">
                <i class="fa-solid fa-bars"></i>
              </span>
              <span data-toggle-target="element" class="hidden">
                <i class="fa-solid fa-x"></i>
              </span>

            </button>
          </div>
          <!-- Logo -->
          <div class="flex-shrink-0">
            <%= link_to root_path, class: "shrink-0 flex items-center fill-current hover:text-white" do %>
              <%= image_tag "logo.jpg", class: "h-10 w-auto rounded-lg", alt: "logo" %>
            <% end %>
          </div>

          <!-- Navigation links -->
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <%= link_to "Bet", bets_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
            </div>
          </div>
        </div>

        <div class="flex items-center">
          <button
              data-controller="theme"
              data-action="click->theme#toggle"
              class="hidden dark:block text-gray-300 hover:bg-gray-700 py-2 px-4 rounded-lg">
                <i class="fa-solid fa-sun"></i>
          </button>
          <button
              data-controller="theme"
              data-action="click->theme#toggle"
              class="block dark:hidden text-gray-300 hover:bg-gray-700 py-2 px-4 rounded-lg">
              <i class="fa-solid fa-moon"></i>
          </button>
          <div class="ml-2 flex items-center md:ml-6 space-x-4">
            <% if current_user %>
              <div class="relative text-sm" data-controller="dropdown">
                <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="flex items-center">
                  <%= render Users::AvatarComponent.new(avatar_url: current_user&.profile&.avatar_url) %>
                  <i class="fa-solid fa-caret-down text-gray-300 ml-1"></i>
                </div>
                <div data-dropdown-target="menu" class="absolute right-0 mt-2 hidden">
                  <div class="bg-white shadow rounded border overflow-hidden">
                    <%= link_to 'Dashboard',  dashboard_path, data: {action: "click->dropdown#toggle"}, class: 'no-underline block pl-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
                    <%= link_to 'Profile',  edit_user_registration_path(mode: :profile), data: {action: "click->dropdown#toggle"}, class: 'no-underline block pl-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
                    <%= link_to t(".sign_out"), destroy_user_session_path, data: {action: "click->dropdown#toggle", turbo_method: :delete }, class: 'no-underline block px-8 py-3 border-t text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
                  </div>
                </div>
              </div>
            <% else %>
              <%= link_to t(".sign_in"), new_user_session_path, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-600 hover:bg-gray-700 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
            <% end %>
          </div>
        </div>
      </div>

      <div data-toggle-target="element" class="py-2 hidden">
        <%= link_to "Todo", "#", class: "block text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
      </div>
    </div>
  <% end %>
</div>
